}

/* 自定义页脚跳动的心样式 */
@keyframes heartAnimate {
  0%, 100% {
    transform: scale(1);
  }
  10%, 30% {
    transform: scale(0.9);
  }
  20%, 40%, 60%, 80% {
    transform: scale(1.1);
  }
  50%, 70% {
    transform: scale(1.1);
  }
}

#heart {
  animation: heartAnimate 1.33s ease-in-out infinite;
}

.with-love {
  color: rgb(255, 113, 168);
}

/* 自定义的侧栏时间样式 */
#days {
  display: block;
  color: #007FFF;
  font-size: 14px;
  margin-top: 15px;
}

