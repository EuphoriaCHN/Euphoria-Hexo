// Custom styles.
/* 文章内链接文本样式 */
.post-body a,
.post-body p a,
.post-body h2 a,
.post-body h3 a,
.post-body h4 a,
.post-body li a {
  color: #0593d3 !important;
  border-bottom: 1px solid #0593d3 !important;

  &:hover {
    color: #fc6423 !important;
    border-bottom: 1px solid #fc6423 !important;
  }
}

a.btn {
  display: inline-block!important;
  padding: 0 20px!important;
  font-size: 14px!important;
  color: #555!important;
  background: #fff!important;
  border: 2px solid #555!important;
  text-decoration: none!important;
  border-radius: 2px!important;
  transition-property: background-color!important;
  transition-duration: 0.2s!important;
  transition-timing-function: ease-in-out!important;
  transition-delay: 0s!important;
  line-height: 2!important;
  word-wrap: break-word!important;
  outline: none!important;
}

.post-body a.btn:hover {
  border-color: #222!important;
  color: #fff!important;
  background: #222!important;
}

/* 自定义页脚样式 */
.custom-footer {
  color: rgba(52, 52, 52, 1.0);
  border-top: 3px solid #9370db;
  background-color: rgba(255, 255, 255, 0.75);
  padding: 10px 0;
  font-size: 15px;
  position: relative;
  top: 10px;
}

/* 主页文章添加阴影效果 */
.home {
  //margin-top: 60px;
  margin-bottom: 60px;
  padding: 25px;
  -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .8);
  -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .8);
}

/* 奇怪的 post-footer */
.post-footer {
  display: none;
}

/* 背景图片透明度 */
.backstretch {
  opacity: .85;
}

/* 页面透明度 */
.content-wrap, .sidebar {
  opacity: .9 !important;
}

.header-inner {
  background: rgba(255, 255, 255, 0.9) !important;
}

/* 去掉图片边框 */
.posts-expand .post-body img {
  border: none;
  padding: 0;
}

.post-gallery .post-gallery-img img {
  padding: 3;
}

/* 自定义的文章摘要图片样式 */
img.img-topic {
  max-width: 100%;
  text-align: center;
}

.euphoria-footer {
  color: rgba(52, 52, 52, 1.0);
  border-top: 3px solid #9370db;
  background-color: rgba(255, 255, 255, 0.75);
  padding: 10px 0;
